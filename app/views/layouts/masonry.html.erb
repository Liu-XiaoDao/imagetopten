<!doctype html>
<html lang="zh">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Abcam旅游图片展</title>
	<script src="http://www.jq22.com/jquery/jquery-1.10.2.js"></script>
	<%= stylesheet_link_tag  'masonry/chromagallery', media: 'all', 'data-turbolinks-track': 'reload' %>
	<style type="text/css">
		body,html
		{ height: 100%; background-color: #e6e9f0; 		}
		.content
		{
			width: 100%;
			height: 100%;
			margin: 10px auto;
		}
		@media screen and (min-width: 980px) /* Desktop */ {
		  .content {
		    width: 70%;
		  }
		}		
		.mygallery
		{
			margin: 25px 0;
		}
	</style>
</head>
<body>
    <%= yield %>
	

	<%= javascript_include_tag 'masonry/chromagallery.pkgd.min', 'data-turbolinks-track': 'reload' %>
	<script type="text/javascript">
		$(document).ready(function(){
			$(".mygallery").chromaGallery
		    ({
		        color:'#000',
		        gridMargin:15,
		        maxColumns:5,
		        dof:true,
		        screenOpacity:0.8
		    });

		    $('.btn').click(function(){
				alert(11);
				return false;
			});
		});
		
	</script>
</body>
</html>